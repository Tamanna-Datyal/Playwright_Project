{
  "name": "playwright_project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cross-env USE_ALLURE=1 cucumber-js -c cucumber.mjs",
    "test:firefox" : "cross-env BROWSER=firefox USE_ALLURE=1 cucumber-js -c cucumber.mjs",
    "test:webkit" : "cross-env BROWSER=webkit USE_ALLURE=1 cucumber-js -c cucumber.mjs",
    "test:chrome" : "cross-env BROWSER=chromium USE_ALLURE=1 cucumber-js -c cucumber.mjs",
    "test:parallel": "cucumber-js --parallel 4",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "report": "npm run allure:generate && npm run allure:open"
  },
